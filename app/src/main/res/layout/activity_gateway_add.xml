<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.ayla.hotelsaas.widget.AppBar
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:center_tv="添加设备"
        app:left_iv="@mipmap/icon_back_black" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/iv_01"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/ic_device_bind_loading" />

        <TextView
            android:id="@+id/tv_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv_01"
            android:layout_alignBottom="@id/iv_01"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="绑定中…"
            android:textColor="#ff333333"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/ll_bind_failed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_01"
            android:layout_marginTop="40dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="invisible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设备绑定失败"
                android:textColor="#ff333333"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="请再检查设备状态与设备ID号后重试"
                android:textColor="#ff333333"
                android:textSize="14sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_bind_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_01"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:text="最长可能需要1分钟，请耐心等待"
            android:textColor="#ff333333"
            android:textSize="14sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_bind_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_01"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:text="设备绑定成功"
            android:textColor="#ff333333"
            android:textSize="14sp"
            android:visibility="invisible" />

        <Button
            android:id="@+id/bt_bind"
            android:layout_width="238dp"
            android:layout_height="50dp"
            android:layout_below="@id/iv_01"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="160dp"
            android:background="@drawable/bg_bt_gateway_add_start_next"
            android:text="完成"
            android:textColor="#ff648c1a"
            android:textSize="14sp"
            android:visibility="invisible" />
    </RelativeLayout>
</LinearLayout>