<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@drawable/actionsheet_top_selector"
    android:gravity="bottom"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="19dp"
        android:layout_marginBottom="19dp"
        android:text="选择图标"
        android:textColor="@color/color_333333"
        android:textSize="18sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingRight="16dp">

        <RelativeLayout
            android:id="@+id/rl_01"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@drawable/bg_scene_icon_selector">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_scene_1" />

            <CheckBox
                android:id="@+id/cb_function_checked_01"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="@dimen/dp_10"
                android:background="@drawable/bg_checkbox_selector"
                android:button="@null"
                android:checked="true"
                android:clickable="false"
                android:drawable="@null" />
        </RelativeLayout>

        <View
            android:layout_width="16dp"
            android:layout_height="0dp" />

        <RelativeLayout
            android:id="@+id/rl_02"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@drawable/bg_scene_icon_selector">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_scene_2" />

            <CheckBox
                android:id="@+id/cb_function_checked_02"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="@dimen/dp_10"
                android:background="@drawable/bg_checkbox_selector"
                android:button="@null"
                android:checked="true"
                android:clickable="false"
                android:drawable="@null" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_03"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/dp_16"
            android:background="@drawable/bg_scene_icon_selector">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_scene_3" />

            <CheckBox
                android:id="@+id/cb_function_checked_03"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="@dimen/dp_10"
                android:background="@drawable/bg_checkbox_selector"
                android:button="@null"
                android:checked="true"
                android:clickable="false"
                android:drawable="@null" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingRight="16dp">

        <RelativeLayout
            android:id="@+id/rl_04"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@drawable/bg_scene_icon_selector">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_scene_4" />

            <CheckBox
                android:id="@+id/cb_function_checked_04"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="@dimen/dp_10"
                android:background="@drawable/bg_checkbox_selector"
                android:button="@null"
                android:checked="true"
                android:clickable="false"
                android:drawable="@null" />
        </RelativeLayout>

        <View
            android:layout_width="16dp"
            android:layout_height="0dp" />

        <RelativeLayout
            android:id="@+id/rl_05"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@drawable/bg_scene_icon_selector">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_scene_5" />

            <CheckBox
                android:id="@+id/cb_function_checked_05"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="@dimen/dp_10"
                android:background="@drawable/bg_checkbox_selector"
                android:button="@null"
                android:checked="true"
                android:clickable="false"
                android:drawable="@null" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_06"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/dp_16"
            android:background="@drawable/bg_scene_icon_selector">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_scene_6" />

            <CheckBox
                android:id="@+id/cb_function_checked_06"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="@dimen/dp_10"
                android:background="@drawable/bg_checkbox_selector"
                android:button="@null"
                android:checked="true"
                android:clickable="false"
                android:drawable="@null" />
        </RelativeLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:orientation="horizontal"
        android:paddingBottom="12dp">

        <RelativeLayout
            android:id="@+id/rl_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="12dp"
            android:layout_weight="1"
            android:background="@drawable/bg_scene_cancel">

            <TextView
                android:id="@+id/v_cancel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/white"
                android:textSize="17sp" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:background="@drawable/bg_scene_confirm">

            <TextView
                android:id="@+id/v_done"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/white"
                android:textSize="17sp" />

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>