<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/stateLayout">

    <com.ayla.hotelsaas.widget.AppBar
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:center_tv="设备搜索"/>

    <ImageView
        android:id="@+id/mdf_iv_loading"
        android:layout_width="15dp"
        android:layout_height="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appbar"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/search_progress_loading"
        android:visibility="visible"
        />

    <TextView
        android:id="@+id/mdf_tv_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/mdf_iv_loading"
        app:layout_constraintTop_toBottomOf="@id/appbar"
        android:layout_marginTop="19dp"
        app:layout_goneMarginStart="20dp"
        android:layout_marginStart="5dp"
        android:textSize="13sp"
        android:textColor="@color/color_3C3C3C"
        android:text="设备搜索中..."
        />

    <TextView
        android:id="@+id/mdf_iv_retry_or_remain_time"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="@id/mdf_tv_loading"
        app:layout_constraintBottom_toBottomOf="@id/mdf_tv_loading"
        android:textSize="12sp"
        android:textColor="@color/serch_multi_device_yellow"
        android:gravity="center_vertical"
        android:text="重新搜索"
        android:visibility="visible"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/mdf_rv_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/mdf_iv_retry_or_remain_time"
        app:layout_constraintBottom_toTopOf="@id/mdf_btn_next"
        tools:listitem="@layout/item_multi_device_found"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/mdf_tv_countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.6"
        android:paddingTop="20dp"
        android:paddingBottom="15dp"
        android:background="@drawable/room_num_shape"
        android:drawableTop="@drawable/ic_progress_dot_loading_nu"
        android:textColor="@color/color_333333"
        android:textSize="12sp"
        android:gravity="center"
        android:text="30s"
        android:visibility="gone"
        />

    <Button
        android:id="@+id/mdf_btn_next"
        style="@style/NPButtonStyle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/common_next"
        android:layout_margin="20dp"
        android:enabled="false"/>
</androidx.constraintlayout.widget.ConstraintLayout>