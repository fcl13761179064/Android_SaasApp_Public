<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom|center">

    <LinearLayout
        android:id="@+id/step_2_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/bg_device_item"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:text="场景名称"
            android:textColor="#ff000000"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/et_dsn"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/scene_rule_name"
            android:gravity="center|left"
            android:hint="请输入名称"
            android:inputType="text"
            android:maxLines="1"
            android:paddingStart="15dp"
            android:textColor="#ff333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/empty_notice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="36dp"
            android:gravity="left"
            android:text="请填场景名称"
            android:visibility="invisible"
            android:textColor="@color/remove_device_color"
            android:textSize="12sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="#F7F7F7" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginBottom="38dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/rl_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="13dp"
                android:layout_weight="1"
                android:background="@drawable/bg_scene_cancal">

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="14dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="23dp"
                    android:src="@drawable/back_arrow_white" />

                <TextView
                    android:id="@+id/v_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="返回"
                    android:textColor="@color/white"
                    android:textSize="17sp" />

            </RelativeLayout>

            <TextView
                android:id="@+id/rl_confire"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_marginEnd="11dp"
                android:layout_weight="1"
                android:background="@drawable/green_location_bg_shape"
                android:enabled="true"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/white"
                android:textSize="17sp" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>