<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/appbar_root_rl_ff91090"
        android:layout_width="match_parent"
        android:layout_height="@dimen/appbar_height">

        <LinearLayout
            android:id="@+id/left_ll"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_left"
                android:layout_width="@dimen/appbar_height"
                android:layout_height="@dimen/appbar_height"
                android:padding="16dp"
                android:src="@mipmap/icon_back_black" />

            <TextView
                android:id="@+id/tv_left"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:maxWidth="100dp"
                android:text="left"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/color_333333"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/appbar_center_container"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toStartOf="@id/common_right_ll"
            android:layout_toEndOf="@id/left_ll"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="title"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/color_333333"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_tab"
            android:layout_width="122dp"
            android:layout_height="32dp"
            android:layout_centerInParent="true"
            android:layout_toStartOf="@id/common_right_ll"
            android:layout_toEndOf="@id/left_ll"
            android:background="@drawable/round_gray_bg"
            android:orientation="horizontal"
            android:visibility="gone">

            <Button
                android:id="@+id/btn_all"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/bar_move_wall_selector"
                android:gravity="center"
                android:text="全部"
                android:textColor="@color/color_333333"
                android:textSize="13sp" />

            <Button
                android:id="@+id/btn_bufen"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bar_move_wall_selector"
                android:gravity="center"
                android:text="待添加"
                android:textColor="@color/color_333333"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/common_right_ll"
            android:layout_width="104dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="14dp"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:text="left"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/color_333333"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/iv_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:src="@mipmap/function_change_pic" />

        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/bottom_line"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_gravity="bottom"
        android:background="#d9d9d9" />
</FrameLayout>