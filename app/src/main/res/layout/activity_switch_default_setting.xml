<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#F9FAFC"
    android:orientation="vertical">

    <com.ayla.hotelsaas.widget.AppBar
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:center_tv="通电开启设置"
        app:left_iv="@mipmap/icon_back_black"
        app:right_tv="完成" />

    <RelativeLayout
        android:id="@+id/rl_1"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="12dp"
        android:background="#FFFFFF"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_function_name_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:maxLines="1"
            android:text="通电开启"
            android:textColor="#ff333333"
            android:textSize="17sp" />

        <CheckBox
            android:id="@+id/cb_function_checked_1"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_checkbox_selector"
            android:button="@null"
            tools:checked="true"
            android:clickable="false"
            android:drawable="@null" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_2"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="1dp"
        android:background="#FFFFFF"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_function_name_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:maxLines="1"
            android:text="通电关闭"
            android:textColor="#ff333333"
            android:textSize="17sp" />

        <CheckBox
            android:id="@+id/cb_function_checked_2"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_checkbox_selector"
            android:button="@null"
            tools:checked="true"
            android:clickable="false"
            android:drawable="@null" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:text="此设置影响开关上电后，默认开启或关闭状态"
        android:textColor="#993c3c43"
        android:textSize="15sp" />
</LinearLayout>