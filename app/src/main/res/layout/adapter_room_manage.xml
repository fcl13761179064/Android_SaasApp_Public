<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@drawable/bg_device_item"
    android:gravity="center"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_marginLeft="@dimen/sp_16"
    android:layout_marginRight="@dimen/sp_16"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/tv_room_show_name"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:ellipsize="end"
        android:layout_marginLeft="@dimen/sp_16"
        android:gravity="center|left"
        android:singleLine="true"
        android:textColor="@color/color_333333"
        android:textSize="17sp"
        tools:text="威尼斯特酒店(广州新白云国际机场店)" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_16"
        android:src="@mipmap/left_ico"/>
</LinearLayout>