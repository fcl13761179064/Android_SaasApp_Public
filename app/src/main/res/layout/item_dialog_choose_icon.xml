<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/item_dialog_choose_icon_rl"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@drawable/bg_scene_icon_selector">

        <ImageView
            android:id="@+id/item_dialog_choose_icon_iv"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerInParent="true" />

        <ImageView
            android:id="@+id/item_dialog_choose_icon_check"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            android:src="@drawable/bg_choose_icon_selector" />

    </RelativeLayout>


</LinearLayout>