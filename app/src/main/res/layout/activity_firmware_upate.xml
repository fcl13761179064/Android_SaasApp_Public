<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F7F7F7"
    android:orientation="vertical">

    <com.ayla.hotelsaas.widget.AppBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:center_tv="固件升级"
        app:left_iv="@drawable/icon_back_normal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="20dp"
        android:text="固件设备"
        android:textColor="@color/color_60_3C3C43"
        android:textSize="13sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:paddingStart="12dp"
        android:paddingTop="20dp"
        android:paddingEnd="12dp"
        android:paddingBottom="20dp">

        <ImageView
            android:id="@+id/firmware_icon"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:src="@mipmap/default_user_img" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/firmware_device_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_black"
                android:textSize="17sp"
                tools:text="这是一个设备名称" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textColor="#737B82"
                    android:textSize="14sp"
                    android:text="当前版本：" />

                <TextView
                    android:id="@+id/firmware_current_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textColor="#737B82"
                    android:textSize="14sp"
                    tools:text="V114445253V114445253V114445253V114445253V114445253" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="最新版本："
                    android:textColor="#737B82"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/firmware_new_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#737B82"
                    android:textSize="14sp"
                    tools:text="V114445253" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_firmware_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_main_button"
            android:orientation="horizontal"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingEnd="10dp"
            android:paddingBottom="5dp">

            <ImageView
                android:id="@+id/update_anim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="5dp"
                android:src="@drawable/icon_update"
                android:visibility="gone" />

            <TextView
                android:id="@+id/firmware_update_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="立即更新"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>