<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.ayla.hotelsaas.widget.AppBar
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:center_tv="添加设备"
        app:left_iv="@drawable/icon_back_normal" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/iv_01"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:src="@drawable/ic_device_add_start_1" />

        <TextView
            android:id="@+id/step_1_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_01"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="115dp"
            android:text="请确保网关已连接网线与电源"
            android:textColor="#ff333333"
            android:textSize="14sp"
            android:visibility="visible" />


        <Button
            android:id="@+id/bt_start_add"
            android:layout_width="238dp"
            android:layout_height="50dp"
            android:layout_below="@id/iv_01"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="160dp"
            android:background="@drawable/bg_bt_gateway_add_start_next"
            android:text="开始配网"
            android:textColor="#ff648c1a"
            android:textSize="14sp" />
    </RelativeLayout>
</LinearLayout>
