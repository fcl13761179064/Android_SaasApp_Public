<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FAFC"
    android:orientation="vertical">

    <com.ayla.hotelsaas.widget.AppBar
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:center_tv="场景按钮icon"
        app:left_iv="@mipmap/icon_back_black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingRight="16dp">

        <RelativeLayout
            android:id="@+id/rl_01"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@drawable/touch_panel_bg_color">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerInParent="true"
                android:src="@drawable/one" />

            <CheckBox
                android:id="@+id/cb_function_checked_01"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/bg_checkbox_selector"
                android:button="@null"
                android:checked="true"
                android:clickable="false"
                android:drawable="@null" />
        </RelativeLayout>

        <View
            android:layout_width="16dp"
            android:layout_height="0dp" />

        <RelativeLayout
            android:id="@+id/rl_02"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@drawable/touch_panel_bg_color">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_scene_2" />

            <CheckBox
                android:id="@+id/cb_function_checked_02"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/bg_checkbox_selector"
                android:button="@null"
                android:checked="true"
                android:clickable="false"
                android:drawable="@null" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingRight="16dp">

        <RelativeLayout
            android:id="@+id/rl_03"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@drawable/touch_panel_bg_color">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_scene_3" />

            <CheckBox
                android:id="@+id/cb_function_checked_03"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/bg_checkbox_selector"
                android:button="@null"
                android:checked="true"
                android:clickable="false"
                android:drawable="@null" />
        </RelativeLayout>

        <View
            android:layout_width="16dp"
            android:layout_height="0dp" />

        <RelativeLayout
            android:id="@+id/rl_04"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@drawable/touch_panel_bg_color">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_scene_4" />

            <CheckBox
                android:id="@+id/cb_function_checked_04"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/bg_checkbox_selector"
                android:button="@null"
                android:checked="true"
                android:clickable="false"
                android:drawable="@null" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingRight="16dp">

        <RelativeLayout
            android:id="@+id/rl_05"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@drawable/touch_panel_bg_color">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_scene_5" />

            <CheckBox
                android:id="@+id/cb_function_checked_05"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/bg_checkbox_selector"
                android:button="@null"
                android:checked="true"
                android:clickable="false"
                android:drawable="@null" />
        </RelativeLayout>

        <View
            android:layout_width="16dp"
            android:layout_height="0dp" />

        <RelativeLayout
            android:id="@+id/rl_06"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@drawable/touch_panel_bg_color">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_scene_6" />

            <CheckBox
                android:id="@+id/cb_function_checked_06"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/bg_checkbox_selector"
                android:button="@null"
                android:checked="true"
                android:clickable="false"
                android:drawable="@null" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>