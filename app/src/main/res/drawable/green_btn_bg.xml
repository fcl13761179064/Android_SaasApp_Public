<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape>
            <solid android:color="#C7DBFF" />
            <stroke android:width="2dp" android:color="#C7DBFF" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="8dp" />
            <stroke android:color="#1960CC"></stroke>
            <solid android:color="#1960CC" />
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape>
            <corners android:radius="8dp" />
            <solid android:color="#1960CC" />
            <stroke android:width="2dp" android:color="#1960CC" />
        </shape>
    </item>
</selector>